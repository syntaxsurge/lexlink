STORY_PRIVATE_KEY="0x..."                            # 32-byte hex private key
STORY_PIL_URI="https://lexlink.vercel.app/legal/pil"      # use your Vercel URL in prod, e.g. https://your-app.vercel.app/legal/pil

# ICP Bitcoin escrow canister
