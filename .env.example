# NextAuth configuration (generate secret with: openssl rand -base64 32)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_DEBUG="false"

# Public RPCs
NEXT_PUBLIC_AENEID_RPC="https://aeneid.storyrpc.io"
NEXT_PUBLIC_DAG_ADDRESS="DAG..."

# Story Protocol signer
STORY_RPC_URL="https://aeneid.storyrpc.io"
STORY_CHAIN_ID="1315"
STORY_SPG_NFT_ADDRESS="0x..."                        # SPG NFT collection address (created via pnpm spg:create)
